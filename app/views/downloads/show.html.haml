- model_class = @download.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:url) + ':'
  %br
  = @download.url
%p
  %strong= model_class.human_attribute_name(:filetype) + ':'
  %br
  = @download.filetype
%p
  %strong= model_class.human_attribute_name(:book_id) + ':'
  %br
  = @download.book_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), downloads_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_download_path(@download), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), download_path(@download), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
