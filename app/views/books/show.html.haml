- model_class = @book.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @book.title
%p
  %strong= model_class.human_attribute_name(:friendlytitle) + ':'
  %br
  = @book.friendlytitle
%p
  %strong= model_class.human_attribute_name(:rights) + ':'
  %br
  = @book.rights
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @book.description
%p
  %strong= model_class.human_attribute_name(:author_id) + ':'
  %br
  = @book.author_id
%p
  %strong= model_class.human_attribute_name(:publisher_id) + ':'
  %br
  = @book.publisher_id
%p
  %strong= model_class.human_attribute_name(:gutenberg_id) + ':'
  %br
  = @book.gutenberg_id
%p
  %strong= model_class.human_attribute_name(:google_books_id) + ':'
  %br
  = @book.google_books_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), books_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_book_path(@book), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), book_path(@book), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
