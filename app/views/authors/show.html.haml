- model_class = @author.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @author.name
%p
  %strong= model_class.human_attribute_name(:about) + ':'
  %br
  = @author.about
%p
  %strong= model_class.human_attribute_name(:birthdate) + ':'
  %br
  = @author.birthdate
%p
  %strong= model_class.human_attribute_name(:deathdate) + ':'
  %br
  = @author.deathdate
%p
  %strong= model_class.human_attribute_name(:alias) + ':'
  %br
  = @author.alias
%p
  %strong= model_class.human_attribute_name(:webpage) + ':'
  %br
  = @author.webpage
%p
  %strong= model_class.human_attribute_name(:gutenberg_id) + ':'
  %br
  = @author.gutenberg_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), authors_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_author_path(@author), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), author_path(@author), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
