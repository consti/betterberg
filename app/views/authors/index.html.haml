- model_class = Author.new.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:about)
      %th= model_class.human_attribute_name(:birthdate)
      %th= model_class.human_attribute_name(:deathdate)
      %th= model_class.human_attribute_name(:alias)
      %th= model_class.human_attribute_name(:webpage)
      %th= model_class.human_attribute_name(:gutenberg_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @authors.each do |author|
      %tr
        %td= link_to author.id, author_path(author)
        %td= author.name
        %td= author.about
        %td= author.birthdate
        %td= author.deathdate
        %td= author.alias
        %td= author.webpage
        %td= author.gutenberg_id
        %td=l author.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_author_path(author), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), author_path(author), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_author_path, :class => 'btn btn-primary'
